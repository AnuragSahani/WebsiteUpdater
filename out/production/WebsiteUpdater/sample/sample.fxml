<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="sample.Controller"
          style="-fx-border-color: blue; -fx-border-width: 10; -fx-border-style: solid">

    <padding>
        <Insets topRightBottomLeft="40"/>
    </padding>

    <Label text="Website Updater" textFill="blue" GridPane.rowIndex="0" GridPane.columnIndex="0"
           GridPane.columnSpan="3">
        <font>
            <Font name="Times New Roman bold" size="40"/>
        </font>
    </Label>

    <TextField promptText="Project Name" fx:id="projectName" GridPane.rowIndex="1" GridPane.columnIndex="0"
               GridPane.columnSpan="2"/>

    <ComboBox prefWidth="150.0" fx:id="projectType" promptText="Project Type" GridPane.rowIndex="2"
              GridPane.columnIndex="0" GridPane.columnSpan="2">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="General ECE"/>
                <String fx:value="Android App"/>
                <String fx:value="Webpage"/>
                <String fx:value="Java Program"/>
            </FXCollections>
        </items>
    </ComboBox>

    <TextArea fx:id="description" GridPane.rowIndex="3" GridPane.columnIndex="0"
              GridPane.columnSpan="3" GridPane.rowSpan="2"/>

    <DatePicker promptText="Date of Completion" fx:id="dateCompleted" GridPane.rowIndex="5" GridPane.columnIndex="0"
                GridPane.columnSpan="2"/>

    <Label text="Skills Used" textFill="blue" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="Times New Roman" size="20"/>
        </font>
    </Label>

    <GridPane fx:id="skillsUsed" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <CheckBox mnemonicParsing="false" text="Java" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <CheckBox mnemonicParsing="false" text="Android Studio" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <CheckBox mnemonicParsing="false" text="App Design" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <CheckBox mnemonicParsing="false" text="Arduino" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <CheckBox mnemonicParsing="false" text="Circuit Design" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <CheckBox mnemonicParsing="false" text="Teamwork" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <CheckBox mnemonicParsing="false" text="HTML" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <CheckBox mnemonicParsing="false" text="CSS" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <CheckBox mnemonicParsing="false" text="Javascript" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <CheckBox mnemonicParsing="false" text="Web Design" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <CheckBox mnemonicParsing="false" text="Game Design" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <CheckBox mnemonicParsing="false" text="Unity" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <CheckBox mnemonicParsing="false" text="Unreal" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <CheckBox mnemonicParsing="false" text="Game Development" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
        </columnConstraints>
    </GridPane>

    <Label text="Github Page: " GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="githubPage" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Google Play: " GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="googlePlay" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label text="Learn More: " GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="learnMore" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Button text="Generate" onAction="#onButtonClicked" GridPane.rowIndex="11"></Button>

    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
